    // Update filter UI state based on dimension
    if (dimension.includes('device')) {
      const deviceValue = value.toUpperCase();
      setSelectedDevices(prev =>
        prev.includes(deviceValue) ? prev.filter(d => d !== deviceValue) : [...prev, deviceValue]
