  const params = useParams();
  const dashboardId = params.id as string;

  const [charts, setCharts] = useState<ChartConfig[]>([
    {
      id: '1',
      type: 'kpi',
      measure: 'GscPerformance7days.clicks',
      title: 'Total Clicks',
